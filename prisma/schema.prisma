generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?   @db.VarChar(100)
  email         String    @unique @db.VarChar(255)
  emailVerified DateTime?
  image         String?
  phone         String?   @db.VarChar(20)
  password      String?   @db.VarChar(255)
  address       String?   @db.VarChar(500)
  role          UserRole  @default(admin)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  posts         Post[]
  reviews       Review[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Service {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(100)
  description String
  duration    Int
  category    String        @db.VarChar(50)
  status      ServiceStatus @default(active)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  bookings    Booking[]
  reviews     Review[]

  @@map("services")
}

model Booking {
  id          Int           @id @default(autoincrement())
  customerId  String
  serviceId   Int
  scheduledAt DateTime
  status      BookingStatus @default(pending)
  notes       String?       @db.VarChar(1000)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  customer    User          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  service     Service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  reviews     Review[]

  @@map("bookings")
}

model Review {
  id        Int          @id @default(autoincrement())
  userId    String
  serviceId Int
  bookingId Int?
  rating    Int          @db.SmallInt
  comment   String?
  status    ReviewStatus @default(pending)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  booking   Booking?     @relation(fields: [bookingId], references: [id])
  service   Service      @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  body        String
  imageUrl    String?  @db.VarChar(512)
  isPublished Boolean  @default(false)
  tags        String?  @db.VarChar(500)
  author      String   @db.VarChar(100)
  slug        String   @unique @db.VarChar(255)
  createdBy   String
  updatedBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  videoUrl    String?  @db.VarChar(512)
  creator     User     @relation(fields: [createdBy], references: [id])

  @@index([slug])
  @@index([isPublished])
  @@map("posts")
}

model Testimonial {
  id        Int               @id @default(autoincrement())
  name      String            @db.VarChar(100)
  role      String?           @db.VarChar(100)
  image     String?           @db.VarChar(512)
  quote     String
  rating    Int               @db.SmallInt
  status    TestimonialStatus @default(pending)
  source    String            @db.VarChar(50)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@map("testimonials")
}

model FAQ {
  id        Int       @id @default(autoincrement())
  question  String    @db.VarChar(500)
  answer    String
  category  String    @db.VarChar(100)
  status    FAQStatus @default(published)
  views     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("faqs")
}

model FormSubmission {
  id        Int                  @id @default(autoincrement())
  type      String               @db.VarChar(50)
  name      String               @db.VarChar(100)
  email     String               @db.VarChar(255)
  phone     String?              @db.VarChar(20)
  service   String?              @db.VarChar(100)
  message   String
  status    FormSubmissionStatus @default(new)
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@map("form_submissions")
}

model GalleryItem {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(255)
  body           String?
  imageUrl       String   @db.VarChar(512)
  isPublished    Boolean  @default(false)
  tags           String?  @db.VarChar(500)
  author         String   @db.VarChar(100)
  createdBy      Int
  updatedBy      Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  afterImageUrl  String?  @db.VarChar(512)
  beforeImageUrl String?  @db.VarChar(512)
  type           String   @default("single_image") @db.VarChar(50)
  videoUrl       String?  @db.VarChar(512)

  @@map("gallery_items")
}

model Video {
  id           Int      @id @default(autoincrement())
  title        String   @db.VarChar(255)
  description  String?
  thumbnailUrl String?  @db.VarChar(512)
  videoUrl     String   @db.VarChar(512)
  isPublished  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("videos")
}

model HomepageSection {
  id          Int      @id @default(autoincrement())
  sectionKey  String   @unique @db.VarChar(100)
  title       String   @db.VarChar(255)
  subtitle    String?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("homepage_sections")
}

enum UserRole {
  admin
  staff
}

enum ServiceStatus {
  active
  inactive
}

enum BookingStatus {
  pending
  confirmed
  completed
  cancelled
}

enum ReviewStatus {
  pending
  published
  flagged
  archived
}

enum TestimonialStatus {
  pending
  approved
  rejected
}

enum FAQStatus {
  published
  draft
}

enum FormSubmissionStatus {
  new
  responded
  closed
}
