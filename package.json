{
  "name": "color-tech",
  "version": "1.0.0",
  "description": "Color-Tech application with PostgreSQL integration",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev:server": "nodemon --exec ts-node -P tsconfig.server.json src/server.ts",
    "dev:frontend": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "build:server": "tsc -p tsconfig.server.json",
    "build:frontend": "vite build",
    "build": "npm run build:frontend && npm run build:server",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "db:create": "ts-node database/createDb.ts",
    "db:migrate": "ts-node database/migrate.ts",
    "db:seed": "ts-node database/seed.ts"
  },
  "keywords": [
    "postgres",
    "express",
    "typescript",
    "node"
  ],
